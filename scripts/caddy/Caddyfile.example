# Production Caddyfile for Veliki Bukovec static site
# Deploy: Copy to VPS and run `sudo caddy reload --config /etc/caddy/Caddyfile`
#
# Issues addressed:
# - #144: Custom 404 page instead of SPA fallback
# - #148: Proper cache headers for static assets
# - #152: try_files without index.html fallback
# - #163: Cache-Control headers documented

n.velikibukovec.hr {
    root * /home/deploy/apps/web-static

    # Handle 404s with custom page (#144)
    handle_errors {
        @404 expression {http.error.status_code} == 404
        handle @404 {
            rewrite * /404.html
            file_server
        }
    }

    # Cache static assets for 1 year (#148, #163)
    @static {
        path *.js *.css *.png *.jpg *.jpeg *.webp *.svg *.ico *.woff *.woff2
    }
    header @static Cache-Control "public, max-age=31536000, immutable"

    # HTML pages: short cache with revalidation (#163)
    @html {
        path *.html
    }
    header @html Cache-Control "public, max-age=3600, must-revalidate"

    # Security headers
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Default: try files without SPA fallback (#152)
    try_files {path} {path}.html {path}/index.html
    file_server
}

admin.velikibukovec.hr {
    reverse_proxy 127.0.0.1:3001
}
